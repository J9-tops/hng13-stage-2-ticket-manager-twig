<script>
  function initHeroButtons() {
    const userJSON = localStorage.getItem("ticketapp_session");
    const heroButtons = document.getElementById('hero-buttons');
    
    if (!userJSON) {
      heroButtons.innerHTML = `
        <a href="/auth/signup" class="btn btn-primary"><span>Get Started</span></a>
        <a href="/auth/login" class="btn btn-secondary"><span>Login</span></a>
      `;
      heroButtons.style.display = 'flex';
    } else {
      heroButtons.style.display = 'none';
    }
  }

  document.addEventListener('DOMContentLoaded', initHeroButtons);
</script>

